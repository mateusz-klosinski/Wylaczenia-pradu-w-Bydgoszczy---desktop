<Window x:Class="EneaWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EneaWPF"
        mc:Ignorable="d"
        Title="Przerwy w dostawach prądu - Enea" Height="435" Width="800">
    <Grid x:Name="grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>
        <StackPanel Margin="10,10,10,10"  Grid.RowSpan="2">
            <TextBlock HorizontalAlignment="Center">Planowane wyłączenia w Bydgoszczy</TextBlock>
            <TextBlock HorizontalAlignment="Left" Margin="10,0,0,0">Dzisiaj</TextBlock>
            <ListView x:Name="todayListBox" ItemsSource="{Binding TodayList}" Margin="10,0,10,10" Background="White" Height="100" />
            <TextBlock HorizontalAlignment="Left" Margin="10,0,0,0">Jutro</TextBlock>
            <ListView x:Name="tommorowListBox" ItemsSource="{Binding TommorowList}" Margin="10,0,10,10" Background="White" Height="100" />
            <TextBlock HorizontalAlignment="Left" Margin="10,0,0,0">W inne dni</TextBlock>
            <ListView x:Name="elseListBox" ItemsSource="{Binding ElseList}" Margin="10,0,10,10" Background="White" Height="100" />
        </StackPanel>

        <StackPanel Grid.Column="1" Margin="10,10,10,10">
            <TextBlock HorizontalAlignment="Center" Margin="0,0,0,5">Wybierz dzielnicę Bydgoszczy</TextBlock>
            <ComboBox Margin="0,0,0,10" BorderBrush="White" >
                <ComboBox.Background>
                    <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                        <GradientStop Color="#FFF0F0F0" Offset="0"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </ComboBox.Background>
            </ComboBox>
            <Button x:Name="button" Content="Do testów" Click="button_Click"/>
        </StackPanel>

        <Button  Grid.Column="1" Grid.Row="1" Margin="10,10,10,10" x:Name="CheckForElectricy" Content="Sprawdź przerwy w dostawach prądu" 
                 Click="CheckForElectricy_Click" Height="50" MaxWidth="200" VerticalAlignment="Top" FontSize="10.667" Background="White" />


    </Grid>
</Window>
